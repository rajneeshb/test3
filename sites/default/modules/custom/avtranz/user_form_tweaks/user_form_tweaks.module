<?php
/**
 * The purpose of this module is to make a few small tweaks that the client
 * requested that didn't really fit into one of the other existing modules.
 */

/**
 * Implements hook_form_FORM_ID_alter().
 *
 * @param array $form
 * @param array $form_state
 *
 * @return NULL
 */
function user_form_tweaks_form_user_register_alter(&$form, &$form_state) {
  $form['mail']['#description'] = t('Please enter a valid e-mail address. This address is not made public and will only be used for notifications generated by the system.');
  unset($form['pass']['#description']);

  return NULL;
}

/**
 * Implements hook_form_FORM_ID_alter().
 *
 * @param array $form
 * @param array $form_state
 *
 * @return NULL
 */
function user_form_tweaks_form_user_login_alter(&$form, &$form_state) {
  unset($form['name']['#description']);
  unset($form['pass']['#description']);

  return NULL;
}

/**
 * Implements hook_form_FORM_ID_alter().
 *
 * @param array $form
 * @param array $form_state
 *
 * @return NULL
 */
function user_form_tweaks_form_user_pass_alter(&$form, &$form_state) {
  $form['name']['#title'] = t('Please enter your username or e-mail address');

  return NULL;
}